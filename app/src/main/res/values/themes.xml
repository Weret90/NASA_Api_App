<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="StartTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@drawable/background_start_theme</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Theme.NASAApiApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottom_sheet_main_color">@color/bottom_sheet_main_color_default_theme</item>
    </style>

    <style name="RedTheme" parent="Theme.NASAApiApp">
        <item name="fontFamily">@font/limbo</item>
        <item name="colorPrimary">@color/red_theme_color_primary</item>
        <item name="colorPrimaryVariant">@color/red_theme_color_primary_variant</item>
        <item name="colorSecondary">@color/red_theme_color_secondary</item>
        <item name="colorSecondaryVariant">@color/red_theme_color_secondary_variant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@drawable/background_red_theme</item>
        <item name="bottom_sheet_main_color">@color/bottom_sheet_main_color_red_theme</item>
    </style>
</resources>