<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottom_sheet_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_views_margin_top</item>
        <item name="android:paddingStart">@dimen/bottom_sheet_views_padding_start_end</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_views_padding_start_end</item>
    </style>

    <style name="next_previous_photo_image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:scaleX">2</item>
        <item name="android:scaleY">2</item>
    </style>

    <style name="header_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/header_margin_top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>